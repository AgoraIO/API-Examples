<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:fitsSystemWindows="true"
    tools:context=".examples.advanced.audiosafety.AudioSafety">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/ll_join"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Users in Channel"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_margin="16dp"
                android:layout_marginBottom="8dp" />

            <!-- Audio seats for displaying users -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/layout_place_123"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintDimensionRatio="3:1"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <io.agora.api.example.common.widget.AudioOnlyLayout
                        android:id="@+id/audio_place_01"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <io.agora.api.example.common.widget.AudioOnlyLayout
                        android:id="@+id/audio_place_02"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <io.agora.api.example.common.widget.AudioOnlyLayout
                        android:id="@+id/audio_place_03"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="invisible" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_place_456"
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/layout_place_123"
                    app:layout_constraintDimensionRatio="3:1"
                    android:layout_marginBottom="8dp">

                    <io.agora.api.example.common.widget.AudioOnlyLayout
                        android:id="@+id/audio_place_04"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <io.agora.api.example.common.widget.AudioOnlyLayout
                        android:id="@+id/audio_place_05"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <io.agora.api.example.common.widget.AudioOnlyLayout
                        android:id="@+id/audio_place_06"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="invisible" />
                </LinearLayout>


                <LinearLayout
                    android:id="@+id/layout_place_78"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    app:layout_constraintTop_toBottomOf="@+id/layout_place_456"
                    app:layout_constraintDimensionRatio="3:1"
                    android:orientation="horizontal">

                    <io.agora.api.example.common.widget.AudioOnlyLayout
                        android:id="@+id/audio_place_07"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <io.agora.api.example.common.widget.AudioOnlyLayout
                        android:id="@+id/audio_place_08"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:visibility="invisible" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tap on a user to report and generate audio evidence"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_marginTop="16dp"
                android:gravity="center" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/ll_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@android:color/white">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_channel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:digits="@string/chanel_support_char"
            android:hint="@string/channel_id"
            android:layout_marginEnd="8dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join" />

</LinearLayout>

</RelativeLayout>
