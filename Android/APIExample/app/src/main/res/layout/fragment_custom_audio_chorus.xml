<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".examples.advanced.custom_audio_chorus.CustomAudioChorus">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_aggressiveness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AEC aggressiveness"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:enabled="true"
        android:layout_marginBottom="256dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_enable_aec"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AEC enable"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:enabled="true"
        android:layout_marginBottom="192dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_playback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/closemicrophone"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:enabled="true"
        android:layout_marginBottom="108dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/closemicrophone"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="16dp"
        android:enabled="true"
        android:layout_marginBottom="64dp"/>

    <LinearLayout
        android:id="@+id/ll_join"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_aggresiveness"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:digits="@string/chanel_support_char"
            android:layout_weight="1"
            android:hint="@string/aggressiveness" />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/et_channel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:digits="@string/chanel_support_char"
            android:layout_weight="1"
            android:hint="@string/channel_id" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_join"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/join" />

    </LinearLayout>

</RelativeLayout>